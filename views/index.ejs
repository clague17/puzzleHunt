<!DOCTYPE html>
<html>
<head>
    <style>
    .content-grid {
        margin-left: auto;
        margin-right: auto;
        max-width: 1000px;
    }
    .main-text-pane {
        display: flex;
        min-height: 512px;
        overflow: hidden;
        flex-flow: column;
        max-width: 100%;
    }

    .mdl_layout__container {
        position:relative;
    }

    #dark {
        background-color: rgb(243,243,243);
    }
    #light {
        background-color: #f6f6f6;
    }
    #color {
        background-color: #46B6AC;
    }
    .mdl-typography--text-left h1{
        padding-left: 20px;
    }
    </style>

    <meta charset="utf-8">
    <title>Puzzle Hunt</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <!-- All the font awesome icons hosted remotely!-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>


    <script src="https://www.gstatic.com/firebasejs/5.8.4/firebase.js"></script>
    <script>
    // Initialize Firebase
    var config = {
        apiKey: "AIzaSyDNhuCXtsK_UfphF7ZJHL8f82NZ_JJcPKs",
        authDomain: "puzzlehunt-b6bea.firebaseapp.com",
        databaseURL: "https://puzzlehunt-b6bea.firebaseio.com",
        projectId: "puzzlehunt-b6bea",
        storageBucket: "puzzlehunt-b6bea.appspot.com",
        messagingSenderId: "607507350359"
    };
    firebase.initializeApp(config);
    var database = firebase.database();
    </script>

    <script src="/js/logic.js"></script>

    <!-- Always shows a header, even in smaller screens. -->

    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title">Puzzle Hunt</span>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <!-- Navigation. We hide it in small screens. -->
                <nav class="mdl-navigation mdl-layout--large-screen-only">
                    <a class="mdl-navigation__link" href="/puzzles">Puzzles</a>
                </nav>
            </div>
        </header>
    </div>
    <main class="mdl-layout__content" style="display:-webkit-box;">
        <div class="content-grid" style="padding-top: 63px;">
            <div class="page-content">
                <div class="main-text-pane" id="light">
                    <div class="mdl-typography--text-left" style="position: relative;">
                        <h1>Rice CS Club Puzzle Hunt 2019</h1>
                    </div>
                    <img src="docs/rice.png" alt="Rice panorama">
                    <div class="mdl-typography" style="position: relative;">
                        <p id="light" style="padding-left: 20px; padding-top:5%">This event is now over. If you want to see the
                            <a href="docs/finalpuzzles.pdf">puzzles</a> and try it out yourself, feel free!</p>
                    </div>
                    <div class="content-grid mdl-grid">
                        <div class="mdl-cell mdl-cell--8-col">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input id="teamName" class="mdl-textfield__input" type="text">
                                <label class="mdl-textfield__label" for="teamName">Team Name...</label>
                            </div>

                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input id="user1" class="user mdl-textfield__input" data-number="1" type="text">
                                <label class="mdl-textfield__label" for="user1">User 1...</label>
                            </div>

                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input id="user2" class="user mdl-textfield__input" data-number="2" type="text">
                                <label class="mdl-textfield__label" for="user2">User 2...</label>
                            </div>

                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">

                                <input id="user3" class="user mdl-textfield__input" data-number="3" type="text">
                                <label class="mdl-textfield__label" for="user3">User 3...</label>
                            </div>

                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input id="user4" class="user mdl-textfield__input" data-number="4" type="text">
                                <label class="mdl-textfield__label" for="user4">User 4...</label>
                            </div>
                            <button id="btnCreateTeam" onclick="sanitizeInput()"
                                class="btn btn-action mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                                Create Team
                            </button>
                            <ul class="demo-list-two mdl-list" id="TABLEhere">
                            </ul>

                            <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" id="teamList">
                                <thead>
                                    <tr>
                                        <th class="mdl-data-table__cell--non-numeric" id="teamName">Team Name</th>
                                        <th class="mdl-data-table__cell--non-numeric" id="usuarios">Team Members</th>
                                        <th class="mdl-data-table__cell--non-numeric" id="puzzlesSolved">
                                            <i class="fa fa-3x fa-check-square" style="color:green; padding-top: 9%; padding-left: 40%"></i>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
</body>
</html>
